<div class="presentacion">
  <h1>Presentar Proyecto</h1>
  <p>Complete todos los campos. Las descripciones deben estar bien completas</p>
</div>
<div class="form">
  <form class="" action="/proyects/addproyect" method="post">
    <div class="header-personal">
      <h2>Informacion Personal  <i class="fas fa-angle-down"></i></h2>
    </div>
    <div class="personal">
      <div class="form-data">
        <div class="header">
          <h3>Nombre y Apellido</h3>
        </div>
        <input type="text" name="uname" value="" required><br>
      </div>
      <div class="form-data">
        <div class="header">
          <h3>DNI</h3>
        </div>
        <input type="number" name="udni" value="" required><br>
      </div>
      <div class="form-data">
        <div class="header">
          <h3>Email</h3>
        </div>
        <input type="email" name="email" value="" required><br>
      </div>
      <div class="form-data">
        <div class="header">
          <h3>Telefono</h3>
        </div>
        <input type="number" name="phone" value="" required><br>
      </div>
    </div>
    <div class="header-proyect" style="background-color: #64da65">
      <h2>Informacion del proyecto  <i class="fas fa-angle-down"></i></h2>
    </div>
    <div class="proyect-data">
      <div class="form-data">
        <div class="header">
          <h3>Nombre del Proyecto</h3>
        </div>
        <input type="text" name="name" value="" required><br>
      </div>
      <div class="form-data">
        <div class="header">
          <h3>Categoria</h3>
        </div>
        <select class="" name="category">
          <option value="Cultural">Cultural</option>
          <option value="Ambiental">Ambiental</option>
          <option value="Productivo">Productivo</option>
          <option value="Solidario">Solidario</option>
          <option value="Comunitario">Comunitario</option>
          <option value="Vecinal">Vecinal</option>
          <option value="Otro">Otro</option>
        </select>
        <br>
      </div>
      <div class="form-data">
        <div class="header">
          <h3>Breve Descripción (máx 110 caracteres)</h3>
        </div>
        <input type="text" name="description" value="" required maxlength="110"><br>
      </div>
      <div class="form-data">
        <div class="header">
          <h3>Dinero que necesita</h3>
        </div>
        <input type="number" name="aim" value="" required><br>
      </div>
      <div class="form-data">
        <div class="header">
          <h3>ID del video en YouTube</h3>
        </div>
        <input type="text" name="video" value="">
        <br>
      </div>
      <div class="form-data">
        <div class="header">
          <h3>Titulo 1</h3>
        </div>
        <input type="text" name="title" value="">
        <br>
      </div>
      <div class="form-data">
        <div class="header">
          <h3>Parrafo 1 (min 40 caracteres)</h3>
        </div>
        <textarea name="problem" value="" required minlength="40" oninput='this.style.height = "";this.style.height = this.scrollHeight + 6 + "px"'></textarea><br>
      </div>
      <div class="form-data">
        <div class="header">
          <h3>Titulo 2</h3>
        </div>
        <input type="text" name="secondtitle" value="">
        <br>
      </div>
      <div class="form-data">
        <div class="header">
          <h3>Parrafo 2 (min 40 caracteres)</h3>
        </div>
        <textarea name="use" value="" required minlength="40" oninput='this.style.height = "";this.style.height = this.scrollHeight + 6 + "px"'></textarea><br>
      </div>
      <div class="form-data">
        <div class="header">
          <h3>Titulo 3</h3>
        </div>
        <input type="text" name="thirdtitle" value="">
        <br>
      </div>
      <div class="form-data">
        <div class="header">
          <h3>Parrafo 3 (min 40 caracteres)</h3>
        </div>
        <textarea name="user" value="" required minlength="40" oninput='this.style.height = "";this.style.height = this.scrollHeight + 6 + "px"'></textarea><br>
      </div>
      <input type="submit" name="" value="Enviar" class="btn">
    </div>
  </form>
</div>
